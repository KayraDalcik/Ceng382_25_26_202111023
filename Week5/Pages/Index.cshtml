@page
@model YourProjectName.Pages.IndexModel
@{
    ViewData["Title"] = "Class Information";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom styles */
        body {
            background-color: #fafafa; /* Light grey background */
            font-family: 'Arial', sans-serif;
        }
        .container {
            margin-top: 30px;
        }
        .card {
            border-radius: 8px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            background-color: #fff;
        }
        .btn-custom {
            border-radius: 15px;
            padding: 6px 15px;
            background-color: #28a745; /* Green color */
            color: white;
            border: none;
            font-size: 12px;
        }
        .btn-custom:hover {
            background-color: #218838; /* Darker green on hover */
        }
        .btn-danger {
            border-radius: 15px;
            padding: 6px 15px;
            background-color: #dc3545; /* Red color */
            color: white;
            border: none;
            font-size: 12px;
        }
        .btn-danger:hover {
            background-color: #c82333; /* Darker red on hover */
        }
        .form-control, .btn {
            border-radius: 15px;
        }
        .navbar {
            margin-bottom: 30px;
            background-color: #56CFE1;
        }
        .navbar-brand {
            font-weight: bold;
            color: white;
        }
        .table th, .table td {
            vertical-align: middle;
        }
        .modal-content {
            border-radius: 8px;
        }
        h2 {
            color: #333;
            font-size: 24px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .table thead {
            background-color: #56CFE1;
            color: white;
        }
        .table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        .table tbody tr:hover {
            background-color: #f1f1f1;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="#">Class Manager</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Contact</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="card p-4">
                    <h2>Add Class</h2>
                    <form method="post">
                        <div class="form-group">
                            <label for="ClassName">Class Name</label>
                            <input type="text" class="form-control" id="ClassName" name="ClassName" required />
                        </div>
                        <div class="form-group">
                            <label for="StudentCount">Student Count</label>
                            <input type="number" class="form-control" id="StudentCount" name="StudentCount" required />
                        </div>
                        <div class="form-group">
                            <label for="Description">Description</label>
                            <textarea class="form-control" id="Description" name="Description" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-custom" asp-page-handler="Add">Add Class</button>
                    </form>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card p-4">
                    <h2>Class List</h2>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Class Name</th>
                                <th>Student Count</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Classes)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.ClassName</td>
                                    <td>@item.StudentCount</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <form method="post" asp-page-handler="Delete">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-danger btn-custom">Delete</button>
                                        </form>
                                        <button class="btn btn-info btn-custom" data-bs-toggle="modal" data-bs-target="#editModal" onclick="populateEditForm(@item.Id)">Edit</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal for Editing Class -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editModalLabel">Edit Class</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="editForm" method="post" asp-page-handler="Edit">
                        <input type="hidden" id="editId" name="Id" />
                        <div class="form-group">
                            <label for="editClassName">Class Name</label>
                            <input type="text" class="form-control" id="editClassName" name="ClassName" required />
                        </div>
                        <div class="form-group">
                            <label for="editStudentCount">Student Count</label>
                            <input type="number" class="form-control" id="editStudentCount" name="StudentCount" required />
                        </div>
                        <div class="form-group">
                            <label for="editDescription">Description</label>
                            <textarea class="form-control" id="editDescription" name="Description" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-custom">Save Changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function populateEditForm(id) {
            // Find the class by Id and fill the modal form with the class data
            var classData = @Html.Raw(Json.Serialize(Model.Classes)); // Serialize the class data
            var selectedClass = classData.find(c => c.Id === id);

            if (selectedClass) {
                document.getElementById("editId").value = selectedClass.Id;
                document.getElementById("editClassName").value = selectedClass.ClassName;
                document.getElementById("editStudentCount").value = selectedClass.StudentCount;
                document.getElementById("editDescription").value = selectedClass.Description;
            }
        }
    </script>
</body>
</html>
