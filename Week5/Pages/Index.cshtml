@page
@model Week5.Pages.Classes.IndexModel
@{
    ViewData["Title"] = "Class Information";
}
@using Microsoft.AspNetCore.WebUtilities
@using System.Text.Json

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body { background-color: #f8f9fa; }
        .navbar { background-color: #343a40; }
        .btn-custom { margin-top: 10px; }
        .card { margin-top: 20px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); }
        .pagination .page-item.active .page-link {
            background-color: #0d6efd; border-color: #0d6efd;
        }
        .hidden-id { display: none; }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark px-3">
        <a class="navbar-brand" href="#">Class Manager</a>
        <div class="ms-auto">
            <form method="get" asp-page="/Logout" class="d-inline">
                <button type="submit" class="btn btn-danger">Logout</button>
            </form>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="card p-4">
                    <h2>Add Class</h2>
                    <form method="post">
                        <div class="form-group">
                            <label for="ClassName">Class Name</label>
                            <input type="text" class="form-control" id="ClassName" name="ClassInformation.Name" required />
                        </div>
                        <div class="form-group">
                            <label for="StudentCount">Student Count</label>
                            <input type="number" class="form-control" id="StudentCount" name="ClassInformation.PersonCount" required />
                        </div>
                        <div class="form-group">
                            <label for="Description">Description</label>
                            <textarea class="form-control" id="Description" name="ClassInformation.Description" required></textarea>
                        </div>
                        <label class="form-check-label">
                            <input type="checkbox" class="form-check-input" name="ClassInformation.IsActive" value="true" /> Is Active
                        </label>
                        <button type="submit" class="btn btn-primary btn-custom" asp-page-handler="Add">Add Class</button>
                    </form>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card p-4">
                    <h2>Class List</h2>
                    <form method="get" class="mb-3">
                        <div class="input-group">
                            <input type="text" name="SearchName" value="@Model.SearchName" class="form-control" placeholder="Filter by Class Name" />
                            <button type="submit" class="btn btn-info">Filter</button>
                        </div>
                    </form>

                    <form method="post" asp-page-handler="ExportSelected" id="exportSelectedForm">
                        <input type="hidden" name="SelectedColumns" id="selectedColumnsInput" />
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th><input type="checkbox" value="Id" checked onchange="toggleColumn(this)"> Id</th>
                                    <th><input type="checkbox" value="Name" checked onchange="toggleColumn(this)"> Class Name</th>
                                    <th><input type="checkbox" value="PersonCount" checked onchange="toggleColumn(this)"> Student Count</th>
                                    <th><input type="checkbox" value="Description" checked onchange="toggleColumn(this)"> Description</th>
                                    <th><input type="checkbox" value="IsActive" checked onchange="toggleColumn(this)"> Is Active</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Classes)
                                {
                                    <tr>
                                        <td class="column-Id">@item.Id</td>
                                        <td class="column-Name">@item.Name</td>
                                        <td class="column-PersonCount">@item.PersonCount</td>
                                        <td class="column-Description">@item.Description</td>
                                        <td class="column-IsActive">@item.IsActive</td>
                                        <td>
                                            <form method="post" asp-page-handler="Delete" style="display:inline;">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                            </form>
                                            <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editModal" onclick="populateEditForm(@item.Id)">Edit</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="text-end">
                            <button type="button" onclick="submitSelectedColumns()" class="btn btn-success">Export Selected</button>
                        </div>
                    </form>

                    <nav>
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= Model.ToplamSayfa; i++)
                            {
                                var routeValues = new Dictionary<string, string>
                                {
                                    ["Sayfa"] = i.ToString()
                                };
                                if (!string.IsNullOrEmpty(Model.SearchName))
                                {
                                    routeValues["SearchName"] = Model.SearchName;
                                }
                                string url = QueryHelpers.AddQueryString("Index", routeValues);
                                <li class="page-item @(i == Model.Sayfa ? "active" : "")">
                                    <a class="page-link" href="@url">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Class</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="editForm" method="post" asp-page-handler="Edit">
                        <input type="hidden" id="editId" name="ClassInformation.Id" />
                        <div class="form-group">
                            <label for="editClassName">Class Name</label>
                            <input type="text" class="form-control" id="editClassName" name="ClassInformation.Name" required />
                        </div>
                        <div class="form-group">
                            <label for="editStudentCount">Student Count</label>
                            <input type="number" class="form-control" id="editStudentCount" name="ClassInformation.PersonCount" required />
                        </div>
                        <div class="form-group">
                            <label for="editDescription">Description</label>
                            <textarea class="form-control" id="editDescription" name="ClassInformation.Description" required></textarea>
                        </div>
                        <label class="form-check-label">
                            <input type="checkbox" class="form-check-input" name="ClassInformation.IsActive" value="true" /> Is Active
                        </label>
                        <button type="submit" class="btn btn-success btn-custom">Save Changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        function submitSelectedColumns() {
            const selected = [...document.querySelectorAll('input[type="checkbox"]:checked')].map(cb => cb.value);
            if (selected.length === 0) {
                alert("Please select at least one column.");
                return;
            }
            document.getElementById("selectedColumnsInput").value = selected.join(",");
            document.getElementById("exportSelectedForm").submit();
        }

        function toggleColumn(checkbox) {
            const colClass = "column-" + checkbox.value;
            document.querySelectorAll("." + colClass).forEach(el => {
                el.style.display = checkbox.checked ? "table-cell" : "none";
            });
        }

        function populateEditForm(id) {
            const row = [...document.querySelectorAll("input[type=hidden][value='" + id + "']")][0].closest("tr");
            document.getElementById("editId").value = id;
            document.getElementById("editClassName").value = row.querySelector(".column-Name").innerText;
            document.getElementById("editStudentCount").value = row.querySelector(".column-PersonCount").innerText;
            document.getElementById("editDescription").value = row.querySelector(".column-Description").innerText;
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
