@page
@model YourProjectName.Pages.IndexModel
@{
    ViewData["Title"] = "Class Information";
}
@using Microsoft.AspNetCore.WebUtilities
@using System.Text.Json

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .navbar {
            background-color: #343a40;
        }

        .btn-custom {
            margin-top: 10px;
        }

        .card {
            margin-top: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .pagination .page-item.active .page-link {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

        /* Hide the ID column */
        .hidden-id {
            display: none;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark px-3">
        <a class="navbar-brand" href="#">Class Manager</a>
    </nav>

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <!-- Add Class Form -->
            <div class="col-md-6">
                <div class="card p-4">
                    <h2>Add Class</h2>
                    <form method="post">
                        <div class="form-group">
                            <label for="ClassName">Class Name</label>
                            <input type="text" class="form-control" id="ClassName" name="ClassInformation.ClassName" required />
                        </div>
                        <div class="form-group">
                            <label for="StudentCount">Student Count</label>
                            <input type="number" class="form-control" id="StudentCount" name="ClassInformation.StudentCount" required />
                        </div>
                        <div class="form-group">
                            <label for="Description">Description</label>
                            <textarea class="form-control" id="Description" name="ClassInformation.Description" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-custom" asp-page-handler="Add">Add Class</button>
                    </form>
                </div>
            </div>

            <!-- Class List + Filter -->
            <div class="col-md-6">
                <div class="card p-4">
                    <h2>Class List</h2>

                    <!-- Filter Form -->
                    <form method="get" class="mb-3">
                        <div class="input-group">
                            <input type="text" name="SearchName" value="@Model.SearchName" class="form-control" placeholder="Filter by Class Name" />
                            <button type="submit" class="btn btn-info">Filter</button>
                        </div>
                    </form>

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th class="hidden-id">Id</th>
                                <th>Class Name</th>
                                <th>Student Count</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Classes)
                            {
                                <tr>
                                    <td class="hidden-id">@item.Id</td>
                                    <td>@item.ClassName</td>
                                    <td>@item.StudentCount</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <form method="post" asp-page-handler="Delete" style="display:inline;">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                        <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editModal" onclick="populateEditForm(@item.Id)">Edit</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <!-- Pagination -->
                    <nav>
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= Model.ToplamSayfa; i++)
                            {
                                var routeValues = new Dictionary<string, string>
                                {
                                    ["Sayfa"] = i.ToString()
                                };
                                if (!string.IsNullOrEmpty(Model.SearchName))
                                {
                                    routeValues["SearchName"] = Model.SearchName;
                                }

                                string url = QueryHelpers.AddQueryString("Index", routeValues);

                                <li class="page-item @(i == Model.Sayfa ? "active" : "")">
                                    <a class="page-link" href="@url">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <!-- Export Button -->
    <div class="text-center my-3">
        <!-- Column Selection Form -->
        <form method="post" asp-page-handler="ExportJson">
            <div class="form-group">
                <label for="selectedColumns">Select Columns to Export</label>
                <select class="form-control" id="selectedColumns" name="SelectedColumns" multiple>
                    <option value="ClassName">Class Name</option>
                    <option value="StudentCount">Student Count</option>
                    <option value="Description">Description</option>
                </select>
            </div>
            <button type="submit" class="btn btn-success mt-2">Export Data</button>
        </form>
    </div>

    <!-- Edit Modal -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Class</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="editForm" method="post" asp-page-handler="Edit">
                        <input type="hidden" id="editId" name="ClassInformation.Id" />
                        <div class="form-group">
                            <label for="editClassName">Class Name</label>
                            <input type="text" class="form-control" id="editClassName" name="ClassInformation.ClassName" required />
                        </div>
                        <div class="form-group">
                            <label for="editStudentCount">Student Count</label>
                            <input type="number" class="form-control" id="editStudentCount" name="ClassInformation.StudentCount" required />
                        </div>
                        <div class="form-group">
                            <label for="editDescription">Description</label>
                            <textarea class="form-control" id="editDescription" name="ClassInformation.Description" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-success btn-custom">Save Changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
